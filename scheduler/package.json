{
    "name": "curling-club-scheduler",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p .",
        "dev": "tsx src/cli.ts",
        "list": "tsx src/cli.ts list",
        "status": "tsx src/cli.ts status",
        "list-one": "tsx src/cli.ts list-one",
        "status-one": "tsx src/cli.ts status-one",
        "tick": "tsx src/cli.ts tick",
        "tick-loop": "powershell -NoProfile -Command \"for(;;){ $timestamp = Get-Date -Format 'yyyy-MM-dd HH:mm:ss'; $status = cmd /c 'npm run --silent tick'; Write-Host \\\"[$timestamp] $status\\\"; Start-Sleep -Seconds 30 }\"",
        "yt-create": "tsx src/cli.ts yt-create",
        "lint": "eslint .",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@google-cloud/local-auth": "^3.0.1",
        "dotenv": "^16.4.5",
        "googleapis": "^140.0.1",
        "yargs": "^17.7.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^22.5.2",
        "@types/yargs": "^17.0.33",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "eslint": "^9.12.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "vitest": "^2.1.2"
    }
}